generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url = "file:./dev.db"
}

model Todo {
  id            String          @id @default(uuid())     
  name_todo     String
  status        Boolean
  price         Int
  created_at    DateTime        @default(now())
  updated_at    DateTime        @updatedAt
}

model User {
  id              String         @id @default(uuid())
  name            String
  address         String
  created_at      DateTime       @default(now())
  update_at       DateTime       @updatedAt
}